<Page
    x:Class="seuWinDock.ICE"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:seuWinDock"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Margin="0,25,0,0"  Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
            <RelativePanel>
                <TextBlock Text="TO DO" Name="todo" FontSize="28" Margin="4,0,4,0" FontWeight="SemiBold"></TextBlock>
                <TextBlock RelativePanel.Below="todo" TextWrapping="Wrap" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="25" Width="686">
            Show a complete list of our people on property this day with a checkbox preceeding their name<LineBreak />
            1: Those on the clock, what they are doing and if unloading, door number<LineBreak />
             2: Those on break<LineBreak />
            3: Those that have clocked out for the day<LineBreak />
        </TextBlock>
            </RelativePanel>
        </StackPanel>

    </Grid>
</Page>
